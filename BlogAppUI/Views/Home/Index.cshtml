@{
}
@model List<BlogListModel>
@foreach (var blog in Model)
{
    <div class="card mb-4">
        <getblogimage id="@blog.Id" css-class="card - img - top"></getblogimage>
        <div class="card-body">
            <h2 class="card-title">@blog.Title</h2>
            <p class="card-text">@blog.ShortDescription</p>
            <a asp-action="Detail" asp-route-id="@blog.Id" class="btn btn-primary">Read More &rarr;</a>
        </div>
        <div class="card-footer text-muted">
            @blog.PostedTime.ToLongDateString()
            <a href="#">Start Bootstrap</a>
        </div>
    </div>
}
