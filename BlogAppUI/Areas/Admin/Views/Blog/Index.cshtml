@{
}
@model List<BlogListModel>

<table class="table table-hover table-bordered">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td> @item.Id</td>
            <td>@item.Title</td>
            <td><a class="btn btn-danger">Sil</a></td>
            <td><a class="btn btn-success">Güncelle</a></td>
        </tr>

    }
</table>
