@{
}
@model List<BlogListModel>

<table class="table table-hover table-bordered">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td> @item.Id</td>
            <td>@item.Title</td>
            <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a></td>
            <td><a class="btn btn-success" asp-action="Update" asp-route-id="@item.Id">Güncelle</a></td>
        </tr>

    }
</table>
<a class="btn btn-primary" asp-action="Create">Blog Ekle</a>
